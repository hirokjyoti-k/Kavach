<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="25dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/colorAppText"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlebar"
            android:text="by Infosyia Lab"
            android:textColor="@color/colorAppText"
            android:layout_marginLeft="25dp"
            android:textSize="13sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>


        <Button
            android:id="@+id/settingbtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_menu_24"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentEnd="true"
            android:onClick="setup"/>


        <Button
            android:id="@+id/aboutbtn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_info_24"
            android:layout_margin="18dp"
            android:layout_toLeftOf="@+id/settingbtn"
            android:onClick="info"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAppText"
        android:text="Panic Button"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_above="@+id/sosbtn"/>

    <ToggleButton
        android:id="@+id/sosbtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/checkbtn"
        android:textOff=""
        android:textOn="" />


    <TextView
        android:id="@+id/btn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAVACH  DEACTIVATE"
        android:textColor="@color/colorAppText"
        android:textAlignment="center"
        android:layout_margin="45dp"
        android:textSize="19sp"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:layout_below="@+id/sosbtn"/>


</RelativeLayout>